{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"lib": ["es2020", "DOM"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": false,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
    "skipLibCheck": true,
		"resolveJsonModule": true
	}
}
